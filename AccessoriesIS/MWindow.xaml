<Window x:Class="AccessoriesIS.MWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessoriesIS"
        mc:Ignorable="d"
        Title="MWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" Background="#10101A"></DockPanel>
        <StackPanel DockPanel.Dock="Top"  Margin="0,15" Height="35" Orientation="Horizontal">
            <Image Margin="15,0,0,0" Width="25" Height="25" Source="Resources/Images/Accessorues_Logo.png"></Image>
            <TextBlock FontSize="15" Margin="15,8,0,7" Foreground="White"
                       VerticalAlignment="Center" Text="Аксесcуары" FontWeight="Bold"/>
        </StackPanel>    
        
    </Grid>
    
</Window>
